
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      </table>
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h1>New book</h1>
      <%= form_with model: @books, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
  <div class="col-md-8 offset-md-1">
    <table class="table">
      <h1>Book detail</h1>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

    <tr>
      <td>
        <%= link_to user_path(@user), class: "btn" do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %><br>
          <%= @user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>

        <% if user_signed_in? && current_user.id == @book.user_id %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book.id), method: :delete,"data-confirm" => "Are you ok?", class:"btn btn-danger" %>
            </td>
          <% end %>
    </tr>

    </table>
  </div>
  </div>
</div>
